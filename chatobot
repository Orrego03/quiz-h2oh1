  <script>
    let answers = {};

    function next(val) {
      answers.q1 = val;
      showQuestion('q2');
    }
    function next2(val) {
      answers.q2 = val;
      showQuestion('q3');
    }
    function next3(val) {
      answers.q3 = val;
      showQuestion('q4');
    }
    function next4(val) {
      answers.q4 = val;
      showQuestion('q5');
    }
    function next5(val) {
      answers.q5 = val;
      hideAllQuestions();
      showLoader();
      setTimeout(() => { hideLoader(); showResult(); }, 3000);
    }

    function showQuestion(id) {
      document.querySelectorAll('.question').forEach(q => q.style.display = 'none');
      document.getElementById(id).style.display = 'block';
    }
    function hideAllQuestions() {
      document.querySelectorAll('.question').forEach(q => q.style.display = 'none');
    }
    function showLoader() {
      document.getElementById('loader').innerText = 'ü§ñ La IA est√° pensando...';
    }
    function hideLoader() {
      document.getElementById('loader').innerText = '';
    }
    function showResult() {
      const { q1, q2, q3, q4, q5 } = answers;
      let flavor = '';
      if (q1 === 'c√≠trico' && q3 === 'd√≠a') flavor = 'Lim√≥n üçã';
      else if (q2 === 'cl√°sico' && q1 === 'dulce') flavor = 'Manzana üçè';
      else if (q2 === 'atrevido' && q4 === 'intensas') flavor = 'Frutos Rojos üçì';
      else if (q5 === 'menta') flavor = 'Menta fresca üåø';
      else if (q5 === 'tropical') flavor = 'Tropical mix üçç';
      else flavor = 'Mandarina üçä';
      document.getElementById('result').innerText = `¬°Tu sabor ideal es H2Oh! ${flavor}`;
      document.getElementById('resetBtn').style.display = 'block';
    }
    function resetAll() {
      answers = {};
      document.getElementById('result').innerText = '';
      document.getElementById('loader').innerText = '';
      document.getElementById('resetBtn').style.display = 'none';
      showQuestion('q1');
    }
  </script>
